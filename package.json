{
  "name": "agentic-wallet",
  "version": "0.1.0",
  "description": "Autonomous wallet infrastructure for AI agents on Solana",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/simulation/scenarios/TokenEcosystemScenario.ts",
    "start": "tsx src/simulation/scenarios/TokenEcosystemScenario.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "solana",
    "wallet",
    "ai-agents",
    "defi",
    "autonomous"
  ],
  "license": "MIT",
  "dependencies": {
    "@solana/spl-token": "^0.4.9",
    "@solana/web3.js": "^1.98.0",
    "dotenv": "^16.4.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "eslint": "^9.16.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
